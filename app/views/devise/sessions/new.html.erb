<!--BANNER INICIAL-->
<div class="banner_central" alt= "Coaching Banner Inicial - @phjamiestret/Unplash" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "coaching_baner_inicial_unsplash_jamie_street_mvoopq" %>')">
  <div class="container">
    <div class= "text-center">
      <h1>Para esta seccion</h1>
      <p>Debes loguearte</p>
    </div>
  </div>
</div>

<div class="container m-5 ">
  <h2>Log in</h2>
  <div class="ml-5 mr-5">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Ingresa", class: "btn btn-success mb-3"  %>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-around">
    <div>
      <h5 class="mt-3">No tenes usuario? </h5>
      <a class="btn btn-outline-warning btn-sm mr-3"  target="_blank" href="https://api.whatsapp.com/send?phone=5491153842626&text=Nuevo%20usuario%20-%20Solicitud">Solicitalo</a>
    </div>
    <div>
      <h5 class="mt-3">te olvidaste tu contrase√±a? </h5>
      <%= link_to "Olvide mi pass", new_password_path(resource_name), class: "btn btn-danger btn-sm" %><br />
    </div>
  </div>
</div>